{
	"name": "tw-easing-gradients",
	"version": "1.0.1",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts",
		"dev": "tsup src/index.ts --format cjs,esm --dts --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"peerDependencies": {
		"tailwindcss": ">=4.0.0"
	},
	"devDependencies": {
		"@vitest/coverage-v8": "^3.0.0",
		"tailwindcss": "^4.0.0",
		"tsup": "^8.4.0",
		"typescript": "^5.7.3",
		"vitest": "^3.0.0"
	},
	"keywords": [
		"tailwindcss",
		"plugin",
		"gradient",
		"easing",
		"css"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/enisbudancamanak/tw-easing-gradients"
	},
	"author": "Enis Budancamanak",
	"description": "Tailwind CSS v4 plugin for smooth easing gradients - eliminates hard edges in color transitions"
}
